<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height" android:background="@color/colorPrimary"
    android:gravity="bottom" android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imagenView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ico"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textNombre" />

    <TextView
        android:id="@+id/textNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textCargo"
        android:layout_alignLeft="@+id/textCargo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/textCargo"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/imagenView"
        android:text="Usuario"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#fff"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textCargo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:text="Administrador"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#fff"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/imagenView"
        android:layout_toEndOf="@+id/imagenView" />


</RelativeLayout>
