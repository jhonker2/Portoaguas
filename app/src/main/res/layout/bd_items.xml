<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/t_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:text="Text" />

    <TextView
        android:id="@+id/t_idmedidor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/t_id"
        android:layout_alignBottom="@+id/t_id"
        android:layout_marginStart="46dp"
        android:layout_toEndOf="@+id/t_id"
        android:text="TextView" />

    <TextView
        android:id="@+id/t_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/t_idmedidor"
        android:layout_alignBottom="@+id/t_idmedidor"
        android:layout_marginStart="51dp"
        android:layout_toEndOf="@+id/t_idmedidor"
        android:text="TextView" />
</RelativeLayout>