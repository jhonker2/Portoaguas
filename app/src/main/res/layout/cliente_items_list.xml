<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/l_cuenta"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:text="cuenta" />

    <TextView
        android:id="@+id/l_cedula"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="cedula"
        android:layout_alignBaseline="@+id/l_cuenta"
        android:layout_alignBottom="@+id/l_cuenta"
        android:layout_toRightOf="@+id/l_cuenta"
        android:layout_toEndOf="@+id/l_cuenta"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/l_cliente"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="cliente"
        android:layout_alignBaseline="@+id/l_cedula"
        android:layout_alignBottom="@+id/l_cedula"
        android:layout_toRightOf="@+id/l_cedula"
        android:layout_toEndOf="@+id/l_cedula"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/l_direcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="direcion"
        android:layout_alignBaseline="@+id/l_cliente"
        android:layout_alignBottom="@+id/l_cliente"
        android:layout_toRightOf="@+id/l_cliente"
        android:layout_toEndOf="@+id/l_cliente"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

</RelativeLayout>